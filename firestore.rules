rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TODO: Replace with actual UIDs after first login
    // Find your UID in Firebase Console > Authentication > Users
    function isHouseholdMember() {
      return request.auth != null &&
             request.auth.uid in ['USER_1_UID', 'USER_2_UID'];
    }

    match /chores/{choreId} {
      allow read, write: if isHouseholdMember();
    }

    match /completions/{completionId} {
      allow read, write: if isHouseholdMember();
    }

    match /users/{userId} {
      allow read: if isHouseholdMember();
      allow write: if request.auth.uid == userId;
    }
  }
}
